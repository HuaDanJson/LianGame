<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:qumiadsdk="http://schemas.android.com/apk/res/com.yottamobile.doraemon"
    android:id="@+id/layout_render"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <org.andengine.opengl.view.RenderSurfaceView
        android:id="@+id/rendersurfaceview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.newqm.sdkoffer.AdView
            android:id="@+id/ads"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            qumiadsdk:backgroundColor="#4076AA"
            qumiadsdk:backgroundTransparent="100"
            qumiadsdk:textColor="#ffffff" />
    </RelativeLayout>

</RelativeLayout>